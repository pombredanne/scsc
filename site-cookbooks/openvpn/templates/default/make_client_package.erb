#!/bin/bash

cd /etc/openvpn/easy-rsa
source ./vars
./pkitool client
DIR=/home/<%= @node[:user] %>/$1
mkdir $DIR
mv keys/client.crt $DIR
mv keys/client.key $DIR
cp keys/ca.crt $DIR
cp keys/ta.key $DIR
cp /etc/openvpn/client.conf $DIR
./clean-all
cd /home/<%= @node[:user] %>
tar --file=$1.tar.gz -czv $1
rm -Rf $DIR
