#!/bin/bash

cd /etc/openvpn/easy-rsa
source ./vars
./pkitool client
DIR=/home/<%= @node[:user] %>/$1
mkdir $DIR
mv keys/$1.crt $DIR/client.crt
mv keys/$1.key $DIR/client.key
cp keys/ca.crt $DIR
cp keys/ta.key $DIR
cp /etc/openvpn/client.conf $DIR/client.ovpn
cd /home/<%= @node[:user] %>
tar --file=$1.tar.gz -czv $1
rm -Rf $DIR
