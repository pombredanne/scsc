domain-needed
bogus-priv
no-resolv
no-poll

server=127.0.0.1#<%= node["dnsmasq"]["dnscrypt_port"] %>
server=/pool.ntp.org/<%= node["dnsmasq"]["opennic_server_1"] %>
server=/pool.ntp.org/<%= node["dnsmasq"]["opennic_server_2"] %>
<% node["dnsmasq"]["opennic_domains"].each do |domain| %>
server=/<%= domain %>/<%= node["dnsmasq"]["opennic_server_1"] %>
server=/<%= domain %>/<%= node["dnsmasq"]["opennic_server_2"] %>
<% end %>

address=/.dev/127.0.0.1
address=/.scsc/<%= `echo -n $(ifconfig eth0 | grep 'inet addr:' | grep -v '127.0.0.1' | cut -d: -f2 | awk '{ print $1 }')` %>
