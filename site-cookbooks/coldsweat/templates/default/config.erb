[database]
engine: sqlite
filename: /data/coldsweat.db

[fetcher]
min_interval: 900 ; Seconds
error_threshold: 100 ; Number of errors before disabling feed
max_history: 365 ; Days
timeout: 30 ; Seconds
multiprocessing: on
processes: 4
chunk_size: 32
scrub: off ; Remove links and images from entries according to /etc/blacklist

; Overrides default Coldsweat user agent string
;user_agent:

;scrub_sharing_links: on

[log]
; See http://docs.python.org/2/howto/logging.html#when-to-use-logging
level: INFO
filename: coldsweat.log
format : localhost - - [%(asctime)s] %(process)d %(levelname)s %(message)s
datefmt: %d/%b/%Y:%H:%M:%S %z

[web]
; Uncomment to serve static files from a different URL
;static_url: http://media.example.com/static
